<?xml version="1.0" encoding="utf-8"?>
<!-- This Constraint layout should maybe be a FrameLayout -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="addContactFragment"
            type="com.example.kit.ui.addcontact.AddContactFragment" />
        <variable
            name="contactListViewModel"
            type="com.example.kit.ui.contactlist.ContactListViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.addcontact.AddContactFragment">

            <TextView
                android:id="@+id/title_add_Contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/padding_large"
                android:text="@string/add_new_contact"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textLayout_addContact_firstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:hint="@string/first_name"
                app:errorIconDrawable="@drawable/ic_error"
                app:helperTextTextAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                app:endIconDrawable="@android:drawable/ic_menu_close_clear_cancel"
                app:endIconMode="clear_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_add_Contact">
                <!--app:boxStrokeColor="@android:color/primary_text_light"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Body1" -->

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInput_addContact_firstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textLayout_addContact_lastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:hint="@string/last_name"
                app:endIconDrawable="@android:drawable/ic_menu_close_clear_cancel"
                app:endIconMode="clear_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textLayout_addContact_firstName">
                <!--app:boxStrokeColor="@android:color/primary_text_light"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Body1" -->

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInput_addContact_lastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textLayout_addContact_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:hint="@string/phone_number"
                app:endIconDrawable="@android:drawable/ic_menu_close_clear_cancel"
                app:endIconMode="clear_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textLayout_addContact_lastName">
                <!--app:boxStrokeColor="@android:color/primary_text_light"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Body1" -->

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInput_addContact_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textLayout_addContact_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:hint="@string/email"
                app:endIconDrawable="@android:drawable/ic_menu_close_clear_cancel"
                app:endIconMode="clear_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textLayout_addContact_phone">
                <!--app:boxStrokeColor="@android:color/primary_text_light"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Body1" -->

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInput_addContact_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView_remind_me_every"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text="@string/text_remind_me_every"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                app:layout_constraintStart_toStartOf="@id/textLayout_addContact_email"
                app:layout_constraintTop_toBottomOf="@id/textLayout_addContact_email" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textLayout_addContact_intervalTime"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_small_4"
                android:layout_weight="1"
                app:errorIconDrawable="@drawable/ic_error"
                app:helperTextTextAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                app:layout_constraintEnd_toStartOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/textView_remind_me_every">
                <!--app:layout_constraintEnd_toEndOf="parent"
                app:boxStrokeColor="@android:color/primary_text_light"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Body1" -->

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInput_addContact_intervalTime"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:text="@string/intervalTime_defaultValue"
                    android:textAlignment="center" />
            </com.google.android.material.textfield.TextInputLayout>


            <!-- Spinner needs an ArrayAdapter to make it work?-->
            <Spinner
                android:id="@+id/spinner_interval_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/intervalUnits_speakable"
                android:entries="@array/intervalUnit_array"
                android:minHeight="48dp"
                android:spinnerMode="dropdown"
                android:textSize="14pt"
                app:layout_constraintBottom_toBottomOf="@id/textLayout_addContact_intervalTime"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toTopOf="@id/textLayout_addContact_intervalTime" />

            <Button
                android:id="@+id/button_add_contact_form"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_xlarge_32"
                android:onClickListener="@{() -> addContactFragment.onSubmitted()}"
                android:paddingHorizontal="@dimen/padding_large"
                android:text="@string/save_contact"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textLayout_addContact_intervalTime" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".5" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>